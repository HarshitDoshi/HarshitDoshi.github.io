---
import Task from "../components/task.astro";
import type TaskType from "../types/TaskType";
const { type, tasks } = Astro.props;
---

<section
    style="flex: calc(100 / 3)%; border: 0.2rem solid #f1f5f9; width: 100%; min-width: calc(100 / 3)%; max-width: 100%; height: 100%;"
>
    <h3 style="margin: 0; padding: 0; border-bottom: 0.2rem solid #f1f5f9;">
        {type.icon} | {type.tag}
    </h3>
    <ul style="padding: 0;">
        {tasks.map((task: TaskType) => {
            return <Task task={task.task} status={task.status} />;
        })}
    </ul>
</section>
